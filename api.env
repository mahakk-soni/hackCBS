import express from "express";
import cors from "cors";
import dotenv from "dotenv";
import { GoogleGenerativeAI } from "@google/generative-ai";

dotenv.config();

const app = express();
app.use(cors());
app.use(express.json());

// Initialize GoogleGenerativeAI client
const genAI = new GoogleGenerativeAI({ apiKey: process.env.GEMINI_API_KEY });

// API endpoint to get idea suggestions
app.post("/api/ideas", async (req, res) => {
  try {
    const { keywords } = req.body;

    // Get the generative model
    const model = genAI.getGenerativeModel({ model: "gemini-1.5-flash" });

    // Define the prompt for generating ideas
    const prompt = `
    You are an AI Innovation Suggestion Engine.
    Based on the following keywords: "${keywords}",
    suggest 3 innovative project ideas with:
    1. Problem Statement
    2. AI-based Solution
    3. A brief roadmap to start building it.
    Give output in JSON format as:
    [
      {"problem": "...", "idea": "...", "roadmap": "..."},
      ...
    ]
    `;

    // Generate the content using the model
    const result = await model.generateContent({ text: prompt });

    // Extract the generated response text
    const text = result.response.text;

    // Parse the response as JSON and send it to the client
    const ideas = JSON.parse(text);
    res.json(ideas);
  } catch (error) {
    console.error("Error generating ideas:", error);
    res.status(500).json({ error: "Failed to generate ideas" });
  }
});

// Start the server
const PORT = 5000;
app.listen(PORT, () => console.log(`âœ… Server running on http://localhost:${PORT}`));